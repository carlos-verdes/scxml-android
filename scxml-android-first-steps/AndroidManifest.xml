<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nosolojava.fsm.android.firstSteps"
    android:versionCode="1"
    android:versionName="1.0.1-SNAPSHOT" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity android:name=".FSMSimpleActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- fsm session has started -->
            <intent-filter>
                <action android:name="com.nosolojava.fsm.ACTION_FSM_SESSION_INITIATED" />

                <data android:pathPattern="fsm://first-steps-main-session" />
            </intent-filter>
            <!-- fsm session has finished -->
            <intent-filter>
                <action android:name="com.nosolojava.fsm.ACTION_FSM_SESSION_ENDED" />

                <data android:pathPattern="fsm://first-steps-main-session" />
            </intent-filter>
            <!-- fsm config has changed -->
            <intent-filter>
                <action android:name="com.nosolojava.fsm.ACTION_FSM_NEW_SESSION_CONFIG" />

                <data android:pathPattern="fsm://first-steps-main-session" />
            </intent-filter>
        </activity>
        <!-- FSM service -->
        <service android:name="com.nosolojava.android.fsm.service.FSMServiceImpl" >

            <!-- Init FSM session -->
            <intent-filter>
                <action android:name="com.nosolojava.fsm.ACTION_INIT_FSM_SESSION" />
            </intent-filter>
            <!-- send event to FSM -->
            <intent-filter>
                <action android:name="com.nosolojava.fsm.ACTION_SEND_EVENT_TO_FSM" />
            </intent-filter>
        </service>
    </application>

</manifest>